<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fernandohbrasil.voicetuner">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:name=".config.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".controller.LoginController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".controller.TreinoController" />
        <activity android:name=".controller.Principal" />
        <activity android:name=".controller.PessoaController" />
        <activity android:name=".controller.ExercioController" />
        <activity android:name=".controller.ResultadoController" />
        <activity android:name=".controller.ResultadoPorExercicioController" />
        <activity android:name=".controller.RemoverController" />
    </application>
</manifest>
